<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_effect"
    android:padding="@dimen/padding_view"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/symbolPortfolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/content_text_size" />

    <TextView
        android:id="@+id/quantityPortfolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/content_text_size" />

    <TextView
        android:id="@+id/averagePortfolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/content_text_size" />

    <TextView
        android:id="@+id/costPortfolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/content_text_size" />

    <TextView
        android:id="@+id/interestPortfolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/content_text_size" />

</LinearLayout>